filename = input('Enter the Filename:')
#creating a list by splitting the filename 
fname , fextension = filename.split('.')

if fextension == 'py':
    # for specific answer for .py file
    print('The extension of file is "Python"')
else:
    print(f'The extension of file is "{fextension}"')

